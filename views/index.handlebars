<div class="jumbotron jumbotron-fluid mt-3 text-center">
  <div class="container">
    <h1 class="display-4"><i class="fas fa-hamburger"></i> Eat-a-Burger</h1>
    <p class="lead">Make a burger, then devour it!</p>
    <div id="form text-center">
      <form class="create-form form-inline">
        <h2>Add a Burger</h2>
        <div class="form-group">
          <label for="ca">Burger</label>
          <input type="text" id="ca" name="name">
        </div>

        {{!-- <div class="form-group">
    <label for="devour">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured<br>
    <input type="radio" name="devoured" value="0"> Not Devoured
  </div> --}}

        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-6 column">
    

    <h2>Burgers that are not Devoured</h2>
    <hr>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block sleep=true}}

      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-sm-6 column">
    <h2>Burgers that are devoured</h2>
    <hr>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block sleep=false}}

      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>
